#ifndef MPA5_FILETREE
#define MPA5_FILETREE

class Command;
#include "commands.hpp"
#include "node.hpp"

class FileTree {
private:
  Node *__root, *__current;

public:
  Node *search(std::string);

  Node *root();
  Node *current();

  void insert(Node *);
  void insert(Node *, Node *);

  bool  remove(Node *);
  bool  remove(Node *, Node *);

  void execute(Command &);
};
#endif
